{
  "compilerOptions": {
    "lib": ["ESNext"],
    // "module": "Node16",
    // "moduleResolution": "Node16",
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "../../../src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}